// For development with .ts extensions in imports, add "noEmit": true.
// For compiling to JS, remove allowImportingTsExtensions and use imports without .ts.


{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["es2020", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "noEmit": true
  }
}